{
  "name": "auth0-demo-web",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Auth0 nodejs demo implementation.",
  "repository": {
    "type": "git",
    "url": "https://github.com/rdahbura/auth0-demo-web.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "debug": "yarn run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run debug:build\" \"yarn run debug:start\"",
    "debug:build": "tsc -w",
    "debug:start": "nodemon build/index.js"
  },
  "dependencies": {
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.9.0",
    "helmet": "^4.3.1",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-auth0": "^1.4.0",
    "pug": "^3.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/connect-flash": "^0.0.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.17.3",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.6.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.16",
    "@types/node-fetch": "^2.5.7",
    "@types/passport": "^1.0.5",
    "@types/passport-auth0": "^1.0.4",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "12",
    "yarn": "1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/camelcase": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}

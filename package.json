{
  "name": "auth0-demo-web",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Auth0 nodejs demo implementation.",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "debug": "yarn run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run debug:build\" \"yarn run debug:start\"",
    "debug:build": "tsc -w",
    "debug:start": "nodemon build/index.js"
  },
  "dependencies": {
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.4.1",
    "helmet": "^3.22.0",
    "http-errors": "^1.7.3",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.2",
    "pug": "^2.0.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/connect-flash": "^0.0.35",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "^0.0.46",
    "@types/mongodb": "^3.5.16",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.5",
    "@types/node-fetch": "^2.5.7",
    "@types/passport": "^1.0.3",
    "@types/passport-auth0": "^1.0.4",
    "@types/request": "^2.48.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": "12",
    "yarn": "1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/camelcase": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}

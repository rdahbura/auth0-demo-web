{
  "name": "auth0-demo-web",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Auth0 nodejs demo implementation.",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "debug": "yarn run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run debug:build\" \"yarn run debug:start\"",
    "debug:build": "tsc -w",
    "debug:start": "nodemon build/index.js"
  },
  "dependencies": {
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "express-validator": "^6.2.0",
    "helmet": "^3.21.2",
    "http-errors": "^1.7.3",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-auth0": "^1.3.0",
    "pug": "^2.0.4",
    "request": "^2.88.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.0.1",
    "@types/connect-flash": "^0.0.35",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.16",
    "@types/helmet": "^0.0.45",
    "@types/mongodb": "^3.3.11",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.11",
    "@types/passport": "^1.0.2",
    "@types/passport-auth0": "^1.0.2",
    "@types/pg": "^7.11.2",
    "@types/request": "^2.48.3",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.7.0",
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "engines": {
    "node": "10",
    "yarn": "1.19"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/camelcase": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}

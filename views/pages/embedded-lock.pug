extends ../layouts/default

block content
  h4 Embedded login page
  div(class="row")
    div(class="col-md-4")
      form
        div(class="form-group")
          label Email
          input(id="email",class="form-control",type="email")
        div(class="form-group")
          label Password
          input(id="password",class="form-control",type="password")
        button(id="loginEmbedded",class="btn btn-primary",type="button") Log in

block scripts
  script(src="https://cdn.auth0.com/js/lock/11.26.3/lock.min.js",type='text/javascript')
  script(type='text/javascript').
    var lock = new Auth0Lock('#{auth0ClientId}', '#{auth0Domain}', {
      auth: {
        params: {
          scope: "openid profile email"
        },
        autoParseHash: true,
        redirect: true,
        responseType: "id_token token",
      }});

    lock.on("authenticated", function(authResult) {
      console.log(authResult);
      lock.getUserInfo(authResult.accessToken, function(error, profileResult) {
        if (error) {
          // Handle error
          return;
        }

        accessToken = authResult.accessToken;
        profile = profileResult;

        // Update DOM
      });
    });

    $("#loginEmbedded").click(function() {
      lock.show();
    });

// embedded lock doesn't work for auth code grant, just implicit.
